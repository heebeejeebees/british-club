<%- include('../partials/head') -%> 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Billing</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item"><a href="/club/Billing">Billing</a></li> 
              <li class="breadcrumb-item active">Add New</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card card-default">
                <div class="card-header">
                  <h3 class="card-title">Billing Form</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" action="/club/billing/submit" method="POST">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-12 col-md-6">
                        <div class="form-group">
                          <label for="name">Name</label>

                          <select id="name" name="name" onchange="this.value" class="form-control" >
                            <%  var sa="" %>
                            <%  var da= data.MemberID %>
                            <%  for(var i=0; i < data2.length; i++) { %>
                            <%  if(data2[i].MemberID == da) { sa = 'selected'  } else {  sa = ' ' } %>
                            <option value=<%= data2[i].MemberID %> <%= sa %> ><%= data2[i].Name %></option>
                            <% } %>
                          </select>
                        </div>
                        <div class="form-group">
                          <label for="name">Date</label>
                          <input type="date" id="Date" name="Date" value="<%= moment(data.Date).format('YYYY-MM-DD') %>" class="form-control" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label for="name">Amount</label>
                            <input type="text" id="Amount" name="Amount" value="<%= data.Trans_Amt %>" class="form-control" autocomplete="off">
                          </div>

                          <div class="form-group">
                            <label for="name">Description</label>
                            <input type="text" id="Desc" name="Desc" value="<%= data.Trans_Desc %>" class="form-control" autocomplete="off">
                          </div>
  
                      </div>
                    </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <input type="hidden" id="id" name="id" value="<%= data.BillingID %>" class="form-control">
                    <button type="submit" class="btn btn-dark">Submit</button>
                    <button onclick="location.href='/club/billing'" class="btn btn-default float-right">Cancel</button>
                  </div>
                </form>
              </div>
            </div>            
            <!-- /.col-md-6 -->
          </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

<script type="text/javascript">

  function resetPasswordForm()
  {
    if ($("#resetPassword").prop("checked"))
    {
      $(".password-field").removeClass("d-none");
    }
    else
    {
      $(".password-field").addClass("d-none");
    }
  }

</script>

<%- include('../partials/footer') -%> 